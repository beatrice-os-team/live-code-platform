class MultiTaskProcessor:
    def __init__(self):
        self.cpu_tasks = 0
        self.io_tasks = 0
        self.memory_tasks = 0
        self.network_tasks = 0
        
    def process_cpu_task(self):
        self.cpu_tasks += 1
        # æ¨¡æ‹ŸCPUå¯†é›†å‹ä»»åŠ¡
        
    def process_io_task(self):
        self.io_tasks += 1
        # æ¨¡æ‹ŸI/Oä»»åŠ¡
        
    def process_memory_task(self):
        self.memory_tasks += 1
        # æ¨¡æ‹Ÿå†…å­˜æ“ä½œ
        
    def process_network_task(self):
        self.network_tasks += 1
        # æ¨¡æ‹Ÿç½‘ç»œä»»åŠ¡
        
    def get_summary(self):
        total = self.cpu_tasks + self.io_tasks + self.memory_tasks + self.network_tasks
        return f"æ€»ä»»åŠ¡: {total} (CPU:{self.cpu_tasks}, I/O:{self.io_tasks}, MEM:{self.memory_tasks}, NET:{self.network_tasks})"

